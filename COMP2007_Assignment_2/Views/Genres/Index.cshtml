@model IEnumerable<COMP_2007_Assignment1.Controllers.Genre>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th>
           @Html.DisplayNameFor(model => model.GenreDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.GenreName, "Browse", "Series", new { id = item.GenreID }, new { @class = "btn btn-default" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GenreDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GenreID }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.GenreID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.GenreID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
